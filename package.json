{
  "name": "zenith---ai-time-management-dashboard",
  "private": true,
  "version": "0.0.5",
  "main": "electron/main.cjs",
  "description": "AI Time Management Desktop App",
  "author": "Synclare",
  "type": "module",
  "scripts": {
    "clean": "rimraf release dist",
    "vite": "vite",
    "electron": "wait-on http://localhost:5173 && electron electron/main.cjs",
    "dev": "concurrently \"npm run vite\" \"npm run electron\"",
    "build:web": "vite build",
    "dist": "npm run clean && npm run build:web && electron-builder",
    "version:bump": "standard-version --release-as patch",
    "build:electron": "electron-builder",
    "release": "npm run clean && npm run version:bump && npm run dist"
  },
  "dependencies": {
    "@fullpage/react-fullpage": "^0.1.49",
    "@google/generative-ai": "^0.24.1",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.6.2",
    "fast-average-color": "^9.5.0",
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.3.0",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tldraw": "^4.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "7zip-bin": "^5.2.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.1.0",
    "standard-version": "^9.5.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.zenith.app",
    "productName": "Lumen",
    "publish": {
      "provider": "github",
      "owner": "Sync1are",
      "repo": "Zenith"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "asar": true,
    "win": {
      "target": "nsis"
    }
  }
}
